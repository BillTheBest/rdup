#!/bin/bash

# create a (mirror) backup in -b dir 
# figure out of the dump should be a full one or incremental

prefix=@prefix@
exec_prefix=@exec_prefix@
cstream=@cstream@

usage() {
        echo "$PROGNAME -b DIR +NUM [OPTIONS] DIR [DIR ...]"
        echo 
        echo "This is a wrapper around rdup and hardlink.pl"
        echo
        echo DIR \ \ - directories to back up
        echo +NUM \ - look back this much days
        echo
        echo OPTIONS:
        echo " -b DIR     backup directory, can be given more then once"
        echo " -c REMOTE  dump the backup on a remote machine with ssh"
        echo " -l NUM     limit transfer to NUM bytes/second, see cstream(1)'s -t"
        echo " -N PREFIX  optional prefix for the timestmp and filelist"
        echo " -k KEYFILE encrypt all files, using crypt.pl"
        echo " -z         compress all files, using gzip.pl"
        echo " -v         echo the files processed to stderr"
        echo " -a         pass -a to rdup"
        echo " -x         pass -x to rdup"
        echo " -h         this help"
        echo " -V         print version"
}

version() {
        echo "$PROGNAME: @PACKAGE_VERSION@ (rdup-utils)"
}

what() {
        for i in `seq 1 7`; do
                dir=`date +%Y%m/%d --date "$i days ago"`

                if [[ -d $BACKUPDIR_PLAIN/$dir ]]; then

                        return false
                fi
        done
        return true
}

ym=`date +%Y%m`           # YYYYMM
ymd=`date +%Y%m/%d`       # YYYYMM/DD
gzip=false
PROGNAME=$0
BACKUPDIR=""
BACKUPDIR_PLAIN=""
KEYFILE=""
PREFIX=""
remote=""
bwidth=""
MIR_OPT=""

_echo2() {
        echo "** $PROGNAME: $1" >&2
}

while getopts ":ab:k:l:c:N:vzxhV" o; do
        case $o in
                b) BACKUPDIR="$BACKUPDIR -b $OPTARG/$ymd"
                BACKUPDIR_PLAIN="$BACKUPDIR_PLAIN $OPTARG"
                if [[ -z "$OPTARG" ]]; then
                        _echo2 "-b needs an argument"
                        exit 1
                fi;;
                k) KEYFILE=$OPTARG
                if [[ -z "$KEYFILE" ]]; then
                        _echo2 "-k needs an argument"
                        exit 1
                fi
                if [[ ! -r "$KEYFILE" ]]; then
                        _echo2 "Cannot read keyfile \`$KEYFILE': failed"
                        exit 1
                fi;;
                c) remote=$OPTARG
                if [[ -z $remote ]]; then
                        _echo2 "-c needs an argument"
                        exit 1
                fi;;
                N) PREFIX=$OPTARG
                if [[ -z $PREFIX ]]; then
                        _echo2 "-N needs an argument"
                fi;;
                l) bwidth=$OPTARG;;
                z) gzip=true;;
                a) MIR_OPT="$MIR_OPT -a";;
                v) MIR_OPT="$MIR_OPT -v";;
                x) x="-x";;
                V) version && exit;;
                h) usage && exit;;
                \?) _echo2 "Invalid option"; usage && exit;;
        esac
done
shift $((OPTIND - 1))

if [[ $# -eq 0 ]]; then
        _echo2 "No directories to backup" 
        exit 1
fi
if [[ -z "$BACKUPDIR" ]]; then
        _echo2 "The -b argument is mandatory"
        exit 1
fi

if [[ ! -z $bwidth && -z $cstream ]]; then
        _echo2 "Bandwidth shaping not enabled: cstream not found"
        exit 1
fi


for i in $BACKUPDIR_PLAIN; do
        mkdir -p "$i/$ym"
        if [[ ! $? ]]; then
                _echo2 "Failure to create target backup directory: \`$i/$ym'"
                exit 1
        fi
done

if [[ what ]]; then
        # full dump
        _echo2 "FULL DUMP"
        rm -f $STAMP
        rm -f $LIST
else
        _echo2 "INCREMENTAL DUMP"
fi

if [[ -z "$remote" ]]; then      # no remote 
        if [[ -z "$KEYFILE" ]]; then
                if $gzip; then
                        @sbindir@/rdup -l $x -c -N $STAMP $LIST $@ | @sbindir@/gzip.pl | \
                        @sbindir@/mirror.pl $MIR_OPT -c $BACKUPDIR
                else 
                        @sbindir@/rdup -l $x -N $STAMP $LIST $@ | \
                        /home/miekg/svn/rdup/trunk/hardlink.pl  $BACKUPDIR
                fi
        else    # with keyfile
                if $gzip; then
                        @sbindir@/rdup -l $x -c -N $STAMP $LIST $@ | @sbindir@/gzip.pl |\
                        @sbindir@/crypt.pl $KEYFILE | \
                        @sbindir@/mirror.pl $MIR_OPT -c $BACKUPDIR
                else 
                        @sbindir@/rdup -l $x -c -N $STAMP $LIST $@ |
                        @sbindir@/crypt.pl $KEYFILE | \
                        @sbindir@/mirror.pl $MIR_OPT -c $BACKUPDIR
                fi
        fi
else     # remote 
        if [[ -z "$KEYFILE" ]]; then
                if $gzip; then
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | @sbindir@/gzip.pl | \
                                ssh -x "$remote" | mirror.pl $a $v -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | @sbindir@/gzip.pl | \
                                $cstream -t $bwidth | \
                                ssh -x "$remote" | mirror.pl $MIR_OPT -c $BACKUPDIR
                        fi
                else    # without gzip
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                # do compress stream here
                                ssh -x -C "$remote" mirror.pl $MIR_OPT -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                $cstream -t $bwidth | \
                                ssh -x -C "$remote" mirror.pl $MIR_OPT -c $BACKUPDIR
                        fi
                fi
        else # with keyfile
                if $gzip; then
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | @sbindir@/gzip.pl |\
                                @sbindir@/crypt.pl $KEYFILE | 
                                ssh -x "$remote" mirror.pl $MIR_OPT -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | @sbindir@/gzip.pl |\
                                @sbindir@/crypt.pl $KEYFILE | 
                                $cstream -t $bwidth | \
                                ssh -x "$remote" mirror.pl $MIR_OPT -c $BACKUPDIR
                        fi
                else
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                @sbindir@/crypt.pl $KEYFILE | \
                                ssh -x -C "$remote" mirror.pl $MIR_OPT -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                @sbindir@/crypt.pl $KEYFILE | \
                                $cstream -t $bwidth | \
                                ssh -x -C "$remote" mirror.pl $MIR_OPT -c $BACKUPDIR
                        fi

                fi
        fi
fi

exit 0
