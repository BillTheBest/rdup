#!/bin/bash

# create a (mirror) backup in -b dir 
# figure out of the dump should be a full one or incremental

prefix=@prefix@
exec_prefix=@exec_prefix@
datadir=@datadir@/rdup
cstream=@cstream@

# shared stuff
source $datadir/shared.sh

usage() {
        echo "$PROGNAME -b DIR [OPTIONS] DIR [DIR ...]"
        echo 
        echo "This is a wrapper around rdup and mirror.pl"
        echo
        echo DIR \ - directories to back up
        echo
        echo OPTIONS:
        echo " -b DIR     backup directory, can be given more then once"
        echo " -c REMOTE  dump the backup on a remote machine with ssh"
        echo " -l NUM     limit transfer to NUM bytes/second, see cstream(1)'s -t"
        echo " -k KEYFILE encrypt all files, using crypt.pl"
        echo " -z         compress all files, using gzip.pl"
        echo " -a         write extended attributes with uid/gid"
        echo " -e         filelist and timestamp are put in backup directory"
        echo " -v         echo the files processed to stderr"
        echo " -x         pass -x to rdup"
        echo " -h         this help"
        echo " -V         print version"
}

d=`date +%Y%m`
etc=false
gzip=false
PROGNAME=$0
BACKUPDIR=""
BACKUPDIR_PLAIN=""
KEYFILE=""
FIRST="" # the first backup dir
remote=""
bwidth=""
MIR_OPT=""

while getopts ":ab:k:l:c:N:vzxehV" o; do
        case $o in
                b) BACKUPDIR="$BACKUPDIR -b $OPTARG/$d"
                BACKUPDIR_PLAIN="$BACKUPDIR_PLAIN $OPTARG"
                if [[ -z $FIRST ]]; then
                        FIRST=$OPTARG
                fi
                if [[ -z "$OPTARG" ]]; then
                        _echo2 "-b needs an argument"
                        exit 1
                fi;;
                k) KEYFILE=$OPTARG
                if [[ -z "$KEYFILE" ]]; then
                        _echo2 "-k needs an argument"
                        exit 1
                fi
                if [[ ! -r "$KEYFILE" ]]; then
                        _echo2 "Cannot read keyfile \`$KEYFILE': failed"
                        exit 1
                fi;;
                c) remote=$OPTARG
                if [[ -z $remote ]]; then
                        _echo2 "-c needs an argument"
                        exit 1
                fi;;
                l) bwidth=$OPTARG;;
                e) etc=true;;
                z) gzip=true;;
                a) MIR_OPT="$MIR_OPT -a";;
                v) MIR_OPT="$MIR_OPT -v";;
                x) x="-x";;
                V) version && exit;;
                h) usage && exit;;
                \?) _echo2 "Invalid option"; usage && exit;;
        esac
done
shift $((OPTIND - 1))
if [[ $# -eq 0 ]]; then
        _echo2 "No directories to backup" 
        exit 1
fi
if [[ -z "$BACKUPDIR" ]]; then
        _echo2 "The -b argument is mandatory"
        exit 1
fi

if [[ ! -z $bwidth && -z $cstream ]]; then
        _echo2 "Bandwidth shaping not enabled: cstream not found"
        exit 1
fi
# where to put the admin files.
if $etc; then
        if [[ ! -z $remote ]]; then
                _echo2 "The -e option is not compatible with -c"
                exit 1
        fi
        ETC="$FIRST"
else
        ETC="/etc/rdup"
fi
STAMP="$ETC/$HOSTNAME.$(basename $1).timestamp"
LIST="$ETC/$HOSTNAME.$(basename $1).list"

for i in $BACKUPDIR_PLAIN; do
        mkdir -p "$i/$d"
        if [[ ! $? ]]; then
                _echo2 "Failure to create target backup directory: \`$i/$d'"
                exit 1
        fi
done

# DIRS in $@
# add pwd if the path was relative
if [[ ${1:0:1} == "/" ]]; then
        dest="$1"
else
        dest="`pwd`/$1"
fi
# check what we should do, only for the first dir...
BACKUPDIR_DATE="$FIRST/$d"
if [[ ! -e "$BACKUPDIR_DATE/$dest" ]]; then
        # kill the timestamp and inc list
        rm -f "$LIST"
        rm -f "$STAMP"
        _echo2 "FULL DUMP"
else
        _echo2 "INCREMENTAL dump"
fi

if [[ -z "$remote" ]]; then      # no remote 
        if [[ -z "$KEYFILE" ]]; then
                if $gzip; then
                        @sbindir@/rdup -l $x -c -N $STAMP $LIST $@ | \
                        @sbindir@/rdup-gzip | \
                        @sbindir@/rdup-mirror $MIR_OPT -c $BACKUPDIR
                else 
                        @sbindir@/rdup -l $x -N $STAMP $LIST $@ | \
                        @sbindir@/rdup-mirror $MIR_OPT $BACKUPDIR
                fi
        else    # with keyfile
                if $gzip; then
                        @sbindir@/rdup -l $x -c -N $STAMP $LIST $@ | \ 
                        @sbindir@/rdup-gzip |\
                        @sbindir@/rdup-crypt $KEYFILE | \
                        @sbindir@/rdup-mirror $MIR_OPT -c $BACKUPDIR
                else 
                        @sbindir@/rdup -l $x -c -N $STAMP $LIST $@ |
                        @sbindir@/rdup-crypt $KEYFILE | \
                        @sbindir@/rdup-mirror $MIR_OPT -c $BACKUPDIR
                fi
        fi
else     # remote 
        if [[ -z "$KEYFILE" ]]; then
                if $gzip; then
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                @sbindir@/rdup-gzip | \
                                ssh -x "$remote" | rdup-mirror $a $v -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \ 
                                @sbindir@/rdup-gzip | \
                                $cstream -t $bwidth | \
                                ssh -x "$remote" | rdup-mirror.pl $MIR_OPT -c $BACKUPDIR
                        fi
                else    # without gzip
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                # do compress stream here
                                ssh -x -C "$remote" rdup-mirror $MIR_OPT -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                $cstream -t $bwidth | \
                                ssh -x -C "$remote" rdup-mirror $MIR_OPT -c $BACKUPDIR
                        fi
                fi
        else # with keyfile
                if $gzip; then
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \ 
                                @sbindir@/rdup-gzip |\
                                @sbindir@/rdup-crypt $KEYFILE | 
                                ssh -x "$remote" rdup-mirror $MIR_OPT -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                @sbindir@/rdup-gzip |\
                                @sbindir@/rdup-crypt $KEYFILE | 
                                $cstream -t $bwidth | \
                                ssh -x "$remote" rdup-mirror $MIR_OPT -c $BACKUPDIR
                        fi
                else
                        if [[ -z $bwidth ]]; then
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                @sbindir@/rdup-crypt $KEYFILE | \
                                ssh -x -C "$remote" rdup-mirror $MIR_OPT -c $BACKUPDIR
                        else
                                @sbindir@/rdup $x -c -N $STAMP $LIST $@ | \
                                @sbindir@/rdup-crypt $KEYFILE | \
                                $cstream -t $bwidth | \
                                ssh -x -C "$remote" rdup-mirror $MIR_OPT -c $BACKUPDIR
                        fi

                fi
        fi
fi

exit 0
